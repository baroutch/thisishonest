<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <config>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Bloc image</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <titre>
                        <TCEforms>
                            <label>Titre de l'image</label>
                            <config>
                                <type>input</type>
                                <size>30</size>
                            </config>
                        </TCEforms>
                    </titre>
                    <sstitre>
                        <TCEforms>
                            <label>Sous Titre de l'image</label>
                            <config>
                                <type>input</type>
                                <size>30</size>
                            </config>
                        </TCEforms>
                    </sstitre>
                    <image>
                        <TCEforms>
                            <label>Image</label>
                            <config>
                                <type>group</type>
                                <internal_type>file</internal_type>
                                <allowed>jpg,png,gif</allowed>
                                <uploadfolder>uploads/tx_hocontent</uploadfolder>
                                <maxitems>1</maxitems>
                                <size>1</size>
                                <selectedListStyle>Width:180px</selectedListStyle>
                            </config>
                        </TCEforms>
                    </image>
                    <height_type>
                        <TCEforms>
                            <label>SÃ©lectionner la hauteur du bloc</label>
                            <onChange>reload</onChange>
                            <config>
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Pleine hauteur</numIndex>
                                        <numIndex index="1">1</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">Hauteur custom</numIndex>
                                        <numIndex index="1">2</numIndex>
                                    </numIndex>
                                </items>
                                <minitems>0</minitems>
                                <maxitems>1</maxitems>
                                <size>1</size>
                            </config>
                        </TCEforms>
                    </height_type>
                    <video_height>
                        <TCEforms>
                            <label>Hauteur du bloc (en px)</label>
                            <displayCond>FIELD:height_type:=:2</displayCond>
                            <config>
                                <type>input</type>
                                <size>30</size>
                            </config>
                        </TCEforms>
                    </video_height>
                </el>
            </ROOT>
        </config>

    </sheets>
</T3DataStructure>